{% extends 'sbAdmin/pages/admin_base.twig' %}
{% block navbar_brand %}Kiko Ramirez  {% endblock %}
      {% block contenio_pagina %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Agregar Producto</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row sombreado">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                             Formulario
                          {{ foo }}
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <form role="form" method="POST" action="index.php/admin/addProduct" id="formulario">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Modelo:</label>
                                            <input class="form-control" name="modelo" placeholder="Modelo del Producto" value="{{ set_value('modelo') }}">
                                            <div class="error">

                                              {{  form_error('modelo')}}
                                            </div>
                                        </div>
                                    </div>



                                    <div class="col-lg-3">
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Tipo de producto:</label>
                                            <select name="tipo" id="tipo" class="form-control" value="{{set_value('tipo') }}">
                                                    <option  value=" " >Seleccione Tipo de Producto..</option>

                                                    {% for prod  in producto %}
                                                      <option  value="{{ prod['idtipo_producto']|convert_encoding('UTF-8', 'iso-2022-jp')}}">
                                                        {{ prod['nombre']|e('html') }}
                                                      </option>
                                                    {% endfor %}


                                            </select>

                                            <div class="error">
                                                {{form_error('tipo') }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-10">
                                        <div class="form-group">
                                           <label>Descripcion:</label>
                                            <input name="descripcion" value="{{set_value('descripcion')}}" class="form-control" placeholder="DescripciÃ³n del Producto">
                                             <div class="error">
                                                {{form_error('descripcion') }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <label>Precio:</label>
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">$</span>
                                            <input id='campo' name="precio" type="text" class="form-control precio" value="{{set_value('precio')}}">
                                            <span class="input-group-addon" id='reflejar'></span>
                                        </div>

                                          <div class="error">
                                              {{ form_error('precio')}}
                                            </div>
                                    </div>

                                     <div class="row">
                                        <div class="form-group">

                                            <div class="col-lg-11">

                                            <button type="submit" class="pull-right btn btn-default ">Guardar</button>

                                            </div>

                                        <div class="col-lg-1">
                                            <button type="reset" class="pull-right btn btn-default " id="reset">Resetear</button>

                                        </div>
                                        </div>

                                    </div>


                                </form>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    </div>
                            </div>



                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

 {% endblock %}

{% block javascripts %}
  <script type="text/javascript">

      $('#tipo').change(function(){
          $('div.error').remove();

      });

       $('#campo').click(function(){
              $("#reflejar").removeClass("input-group-addon");
              $("#reflejar").text('');
        });



  </script>
{% endblock %}
