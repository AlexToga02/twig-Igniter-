{% extends "base.twig" %}
  {% block encabezado %}
  <link href="http://cdn.phpoll.com/css/animate.css" rel="stylesheet">
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
        <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{user}} <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="index.php/product/perfil">Perfil</a></li>
                <li><a href="index.php/product/favoritos">Favoritos</a></li>
                <li><a href="index.php/product/logout">Salir</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  {% endblock %}
  {% block contenido %}
  <div class="box">
    <div class="box-heading">Marcadores</div>
    <div class="box-content">
      <div class="box-product">
        {% for articulo in articulos %}
          <div>
            {%if user%}
               <a class="btn btn-danger btn-xs pull-right" role="button" href="index.php/product/borrarFav/{{articulo.idmarcador}}"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
            {%endif%}
            <div class="image"><a href="#"><img src="{{articulo.Imagen}}"  /></a></div>
            <div class="name"><a href="#">{{articulo.Nombre}}</a></div>
            <div class="price">
              ${{articulo.Precio}}           </div>
                <div class="rating"><img src="catalog/view/theme/bigshop/image/stars-5.png" alt="Based on 1 reviews." /></div>
                {%if user%}
                   <div class="cart"><input type="button" value="Add to Cart" onclick="addToCart('40');" class="button" /></div>

                {%endif%}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
  {% endblock %}
